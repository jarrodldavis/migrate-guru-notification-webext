{
  "name": "@jarrodldavis/migrate-guru-notification-webext",
  "version": "0.1.0",
  "description": "Add notifications for Migrate Guru migrations",
  "main": "src/manifest.json",
  "scripts": {
    "dev": "webextension-toolbox dev",
    "dev:firefox": "concurrently -k -i -n run,build 'npm:open:firefox' 'npm:dev firefox'",
    "dev:chrome": "concurrently -k -i -n run,build 'npm:open:chrome' 'npm:dev chrome'",
    "open:firefox": "wait-on -l ./dist/firefox/manifest.json && ./scripts/clean-env web-ext run -s ./dist/firefox",
    "open:chrome": "wait-on -l ./dist/chrome/manifest.json && ./scripts/open-chrome ./dist/chrome",
    "build": "webextension-toolbox build",
    "lint:firefox": "./scripts/clean-env web-ext lint -w -s ./dist/firefox",
    "submit:firefox": "web-ext sign -s ./dist/firefox/ -a ./packages/",
    "preversion": "./scripts/version-bump/run-preversion",
    "version": "./scripts/version-bump/run-version",
    "postversion": "./scripts/version-bump/run-postversion",
    "mergeversion": "./scripts/version-bump/run-mergeversion"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jarrodldavis/migrate-guru-notification-webext.git"
  },
  "keywords": [
    "wordpress",
    "migrate-guru",
    "migration",
    "web-ext",
    "webextension"
  ],
  "author": "Jarrod Davis <developer@jarrodldavis.com>",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/jarrodldavis/migrate-guru-notification-webext/issues"
  },
  "homepage": "https://github.com/jarrodldavis/migrate-guru-notification-webext#readme",
  "devDependencies": {
    "@jarrodldavis/rasterize-svg-path-webpack-plugin": "^0.1.0",
    "@jarrodldavis/remark-changelog-version-bump": "^0.1.0",
    "@mdi/js": "^3.4.93",
    "chrome-launcher": "^0.10.5",
    "concurrently": "^4.1.0",
    "copy-webpack-plugin": "^4.6.0",
    "remark-cli": "^6.0.1",
    "svelte": "^2.16.1",
    "svelte-loader": "^2.12.0",
    "wait-on": "^3.2.0",
    "web-ext": "^2.9.3",
    "webextension-toolbox": "^3.0.0"
  },
  "dependencies": {}
}
